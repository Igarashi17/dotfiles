snippet		date
abbr		yyyy-Mon-dd
	`strftime("%Y-%b-%d")`

snippet		filename
abbr		basename
alias		fname
options		word
	`expand('%')`

snippet		filepath-full
abbr		full path
alias		fpath
options		word
  `expand('%:p')`

snippet		lastchange
abbr		Last change: .
	Last Change: .

snippet		bar-
abbr		--------
	--------------------------------

snippet		bar=
abbr		========
	================================

snippet		bar*
abbr		********
	********************************
